<div class="panel panel-default">
  <div class="panel-heading">
    Devenez hôte clone-AirBnB
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @room do |f| %>
        <%= render 'shared/errors' %>
        <div class="row">
          <div class="col-md-4 select">
            <div class="form-group">
              <%= f.label :home_type, 'genre d\'habitation' %>
              <%= f.select :home_type,
                           [
                               ['Maison', 'Maison'],
                               ['Appartement', 'Appartement'],
                               ['Bed & Breakfest', 'Bed & Breakfest']
                           ],
                           id: 'home_type',
                           prompt: 'à sélectionner',
                           class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <%= f.label :room_type, 'type de chambre' %>
              <%= f.select :room_type,
                           [
                               ['Logement entier', 'Logement entier'],
                               ['Chambre privée', 'Chambre privée'],
                               ['Chambre partagée', 'Chambre partagée']
                           ],
                           id: 'room_type',
                           prompt: 'à sélectionner',
                           class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <%= f.label :accomodate, 'Combien de personnes ?' %>
              <%= f.select :accomodate,
                           [
                               ['1 voyageur', 1],
                               ['2 voyageurs', 2],
                               ['3 voyageurs', 3],
                               ['4 voyageurs', 4],
                               ['5 voyageurs', 5],
                               ['6 voyageurs', 6]
                           ],
                           id: 'accomodate',
                           prompt: 'à sélectionner',
                           class: 'form-control' %>
            </div>
          </div>

          <div class="row">

            <div class="col-md-4 select">
              <div class="form-group">
                <%= f.label :bed_room, 'Chambre(s) ?' %>
                <%= f.select :bed_room,
                             [
                                 ['Une chambre', 1],
                                 ['2 chambres', 2],
                                 ['3 chambres', 3],
                                 ['4 chambres ou plus...', 4]
                             ],
                             id: 'bed_room',
                             prompt: 'Sélectionner le nombre...',
                             class: 'form-control' %>
              </div>
            </div>

            <div class="col-md-4 select">
              <div class="form-group">
                <%= f.label :bath_room, 'Combien de salle de bains ?' %>
                <%= f.select :bath_room,
                             [
                                 ['Une salle de bains', 1],
                                 ['2 salles de bain', 2],
                                 ['3 salles de bain', 3],
                                 ['4 salles de bain ou plus...', 4]
                             ],
                             id: 'bath_room',
                             prompt: 'Sélectionner le nombre...',
                             class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <%= f.label :listing_name, 'Donnez un nom au logement' %>
              <%= f.text_field :listing_name,
                               placeholder: 'Titre de l\'annonce',
                               class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <label>Résumé</label>
              <%= f.text_area :summary,
                              rows: 4,
                              placeholder: 'Décrivez le décor, l\'ambiance, ce qui se trouve à proximité, etc...',
                              class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <label>Adresse</label>
              <%= f.text_field :address,
                               placeholder: 'Où est situé votre logement ?',
                               class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <%= f.check_box :is_wifi %> Wifi
              </div>

              <div class="form-group">
                <%= f.check_box :is_tv %> Télévision
              </div>

              <div class="form-group">
                <%= f.check_box :is_closet %> Penderie/Commode
              </div>

              <div class="form-group">
                <%= f.check_box :is_shampoo %> Shampoing
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <%= f.check_box :is_kitchen %> Cuisine
              </div>

              <div class="form-group">
                <%= f.check_box :is_breakfast %> Petit déjeuner, café, thé
              </div>

              <div class="form-group">
                <%= f.check_box :is_heating %> Chauffage
              </div>

              <div class="form-group">
                <%= f.check_box :is_air %> Climatisation
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>Prix par nuit</label>
                <div class="input-group">
                  <%= f.text_field :price, placeholder: "ex: 45€''", class: 'form-control' %>
                  <div class="input-group-addon">€</div>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <%= f.check_box :active %> Annonce active
            </div>
          </div>

          <div class="actions">
            <%= f.submit 'Je valide mon annonce', class: 'btn btn-primary' %>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>